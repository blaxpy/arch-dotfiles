[colors]
background = #3c3836
foreground = #fbf1c7
primary = #d65d0e
alert = #cc241d

[bar/top]
; Dimension defined as percentage or pixel value.
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

cursor-click = pointer
cursor-scroll = ns-resize

font-0 = JetBrains Mono:style=Regular:size=10;2
# https://materialdesignicons.com/
# https://cdn.materialdesignicons.com/5.4.55/
font-1 = Material Design Icons:style=Regular;2
font-2 = Weather Icons:size=10;2

; Fixes the issue where the bar is being drawn on top of fullscreen window's
wm-restack = bspwm

; Tell the Window Manager not to configure the window.
override-redirect = true

; Enable support for inter-process messaging.
enable-ipc = true

; Prefer fixed center position for the `modules-center` block.
fixed-center = true

tray-position = right
; Pad the sides of each tray icon
tray-padding = 1

; Number of spaces to add before/after each module.
module-margin-left = 0
module-margin-right = 1

modules-left = bspwm xwindow
modules-center = date openweathermap
modules-right = cpu memory filesystem temperature network dunst pulseaudio xkeyboard powermenu

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-padding = 1
label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %index%
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:55:...%

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %H:%M
label = %{A1:~/.config/polybar/scripts/calendar.sh --popup &:}%date%%{A} %time%

[module/openweathermap]
# https://github.com/polybar/polybar/wiki/Module:-script
type = custom/script
exec = $HOME/.config/polybar/scripts/openweathermap.sh
interval = 600
label-font = 5

[module/cpu]
type = internal/cpu
interval = 1
label = 󰻠%percentage:2%%

[module/memory]
type = internal/memory
interval = 5
label = 󰍛%percentage_used:2%%

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = 󰋊%percentage_used:2%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <ramp><label>
format-warn = <ramp><label-warn>
label = %temperature-c:2%
label-warn = %temperature-c:2%
label-warn-foreground = ${colors.alert}
ramp-0 = 󱃃
ramp-1 = 󰔏
ramp-2 = 󰸁

[module/network]
type = internal/network
interface = enp8s0
interval = 1
label-connected = 󰁆%downspeed:8% 󰁞%upspeed:8%
format-disconnected =

[module/dunst]
type = custom/ipc
initial = 1
hook-0 = echo "%{A1:notify-send "DUNST_COMMAND_PAUSE" && polybar-msg hook dunst 2:}󰂚%{A}" &
hook-1 = echo "%{A1:notify-send "DUNST_COMMAND_RESUME" && polybar-msg hook dunst 1:}󰂛%{A}" &

[module/pulseaudio]
type = internal/pulseaudio
format-volume = %{A3:pavucontrol &:}<ramp-volume><label-volume>%{A}
label-volume = %{A3:pavucontrol &:}%percentage:3%%%{A}
label-muted = 󰸈   %
ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾

[module/xkeyboard]
type = internal/xkeyboard
label-layout = 󰌌 %layout%

[module/powermenu]
type = custom/menu
expand-right = false
label-open = 󰜲
label-close = 󰜶
label-separator = |
menu-0-0 = 󰑓
menu-0-0-exec = reboot
menu-0-1 = 󰐥
menu-0-1-exec = poweroff
menu-0-2 = 󰍁
; menu-0-2-exec = lock

[settings]
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true

; vim:ft=dosini
